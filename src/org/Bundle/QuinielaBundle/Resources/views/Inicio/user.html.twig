{% extends "orgQuinielaBundle::layout.html.twig" %}

{% block title %}orgQuinielaBundle:Inicio:index{% endblock %}

{% block navbar %}

	<ul>
	{% for item in usuarios if item.id != 999 %}
		<li><a href="{{ path('q_user', {'id':item.id })}}">{{ item.puntos }} - {{ item.nombre}}</a></li>
    {% endfor %}
    </ul>

{% endblock %}

