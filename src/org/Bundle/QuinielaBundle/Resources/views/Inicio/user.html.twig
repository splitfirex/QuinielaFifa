			<td class="pos">{{ item.numPartido }}</td>
			<td width="180px" style="text-align:right">{{ item.fecha|date(' l j/m/Y h:i') }}</td>
			<td width="160px" style="text-align:right">{{item.paisHome.nombre}} <img class="logo" style="vertical-align:middle"  height="10" width="15"src="{{ asset('bundles/orgquiniela/images/flags/')}}{{item.paisHome.bandera}}"></td>
			<td width="20px">{{item.homeScore2}}</td>
			<td width="20px">{{item.vistScore2}}</td>
			<td width="160px" style="text-align:left"><img class="logo" style="vertical-align:middle"  height="10" width="15"src="{{ asset('bundles/orgquiniela/images/flags/')}}{{item.paisVisitante.bandera}}"> {{item.paisVisitante.nombre}}</td>
			<td>{{ item.RealHome}}</td>
			<td>{{ item.RealVisitante}}</td>
			<td style="background-color:{{item.color}};">{{ item.puntaje}}</td>
